# Smart Fit Application Environment Variables
# Copy this file to .env and update values as needed

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=your_database_name

# Service Ports (optional - these have sensible defaults)
API_SERVICE_HOST_PORT=8080
USER_SERVICE_HOST_PORT=8082
MEAL_SERVICE_HOST_PORT=8083
CHECK_IN_SERVICE_HOST_PORT=8084
SURVEY_SERVICE_HOST_PORT=8085
WEB_CLIENT_HOST_PORT=5050
POSTGRES_HOST_PORT=5432

# JWT Configuration (for API service)
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRY=24h

# API Service Configuration
API_PORT=8080
CORS_ORIGIN=http://localhost:5050

# User Service Configuration
USER_SERVICE_PORT=8080

# Meal Service Configuration
MEAL_SERVICE_PORT=8080

# Check-in Service Configuration
CHECK_IN_SERVICE_PORT=8080

# Survey Service Configuration
SURVEY_SERVICE_PORT=8080

# Web Client Configuration
REACT_APP_API_URL=http://localhost:8080
REACT_APP_ENVIRONMENT=development

# Development/Production Flags
ENVIRONMENT=development
LOG_LEVEL=debug
